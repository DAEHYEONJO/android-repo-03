<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="issue"
            type="com.example.gitreposearch.data.Issue" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="#00000000"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/issue_state_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="19dp"
            android:background="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_issue_open" />

        <TextView
            android:id="@+id/issue_repo_tv"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_height="16dp"
            android:gravity="top"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/issue_state_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/issue_number_tv"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:text="@{'#'+issue.number}"
            android:background="#00000000"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@id/issue_repo_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/issue_title_tv"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="44dp"
            android:layout_marginRight="24dp"
            android:background="#00000000"
            android:text="@{issue.title}"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/issue_date_tv"
            android:layout_width="61dp"
            android:layout_height="16dp"
            android:text="날짜"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:background="#00000000"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>